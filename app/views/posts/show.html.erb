<h1><%= @post.title %></h1>
<p>Author: <%= @post.author %></p>
<p><%= @post.body %></p>
<p><%= image_tag(@post.image, width: "200px") %></p>
<p>
	<%= link_to 'Edit', edit_post_path(@post.id) %>
</p>
<p>
	<%= link_to 'Destroy', post_path(@post),
	              method: :delete,
	              data: { confirm: 'Are you sure?' } %>
</p>
